.sidebar
    .categories
        .ul.categories__list
            - var items = ["Флагманы","Бюджетная линейка"]
            each item in items
                .li(class="categories__item"+((item=="Бюджетная линейка")?""+"active":""))
                    a(href="#").categories__link=item
    .filter
        ul.filter__list
            li.filter__item
                .filter__title
                    a(href="#").filter__title-link Наличие в Магазине
                .filter__content
                    ul.filter__choose
                    -var items=["Во всех магазинах","В ближайшем магазине"]
                    each item in items
                        li.filter__choose-item
                            label.filter__choose-label
                                input(name="location" type="radio").filter__choose-input
                                .filter__choose-elem
                                .filter__choose-text=item
            li.filter_item
                .filter__title
                    a(href="#").filter__title-link Бренды
                .filter__content
                    ul.filter__choose.filter__choose_chackboxes
                        -var items=["Lenovo","Apple","Samsung","Asus","Motorola"]
                        each item in items
                            li.filter__choose-item
                                //Используем inline-block
                                label.filter__choose-label
                                    input(name="location" type="radio").filter__choose-input
                                    .filter__choose-elem
                                    .filter__choose-text=item
                        .filter__reset--wrap
                            a(href="#").filter__reset Сбросить фильтер

            li.filter__item
                .filter__title
                    a(href="#").filter__title-link Цена
                .filter__content
                    .filter__slider
                        .filter__slider-displays
                             .filter__slider-left
                                 .filter__slider-text от
                                 input(name="" type="text" placeholder="").filter__slider-input.filter-input-from
                             .filter__slider-right
                                 .filter__slider-text до
                                 input(name="" type="text" placeholder="").filter__slider-input.filter-input-to
                        .filter__slider-element
            li.filter__item
                .filter__title
                    a(href="#").filter__title-link Цвет
                .filter__content
                    ul.filter__colors
                        -var colors=['ffffff','cccccc','000020','0a3153','ff1800','fff343','fb914a','92c37c','40a6ff','9870ad','dc78ad','7f4213','7f401d']
                        each color in colors
                            li.filter__colors-item
                                a(href="#" style="background-color:#"+color).filter__title-link
                li.filter__item
                    .filter__title
                        a(href="#").filter__title-link Операционная система
                    .filter__content
                        ul.filter__choose.filter__choose_chackboxes
                            -var items=["Android","IOS"]
                            each item in items
                                li.filter__choose-item
                                    //Используем inline-block
                                    label.filter__choose-label
                                        input(name="location" type="radio").filter__choose-input
                                        .filter__choose-elem
                                        .filter__choose-text=item
                            .filter__reset--wrap
                                a(href="#").filter__reset Сбросить фильтер





                    ul.filter__choose
                    -var items=["Во всех магазинах","В ближайшем магазине"]
                    each item in items
                        li.filter__choose-item
                            //Используем inline-block
                            label.filter__choose-label
                                input(name="location" type="radio").filter__choose-input
                                .filter__choose-elem
                                .filter__choose-text=item